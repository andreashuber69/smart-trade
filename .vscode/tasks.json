{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "args": [ "run" ],
    "isShellCommand": true,
    "showOutput": "silent",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [ "tsc" ], 
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "runAndroid",
            "args": [ "start", "--", "android" ] 
        },
        {
            "taskName": "runIos",
            "args": [ "start", "--", "ios" ] 
        }
    ]
}